#!/bin/bash

# Replace all spaces
title="${1}"
date_today=$(date +"%Y.%m.%d")
if [ -n "${2}" ]; then
    date_today="${2}"
fi
filename="${date_today}-${title// /-}.md"

if [ -f ${filename} ]; then
    echo "File exists - so fuck u!"
    exit 255

fi
cat > "${filename}" <<EOF
## ${title} 

\`\`\`
Tema: ${title}
Foreleser:
Pensum: 
Tidspunkt: ${date_today}
Rom:
\`\`\`

### 

####
EOF
nvim ${filename}
